
<% if favorite = current_user.favorited(post) %>
  <%= link_to [topic, post, favorite], class: 'btn btn-primary btn-small', method: :delete do %>
    <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Unfavorite
  <% end %>
<% else %>
  <%= link_to [topic, post, Favorite.new], class: 'btn btn-small', 
    method: :post do %>
    <i class="glyphicon glyphicon-star"> </i>&nbsp; Favorite
  <% end %>
<% end %>